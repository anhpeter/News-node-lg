<html lang="en" class="fontawesome-i2svg-active fontawesome-i2svg-complete">
 
<!-- Head -->
<head>    
    <%- include(__path.views+'/admin/elements/head.ejs'); %>
</head>

<!-- Body -->
<body id="page-top" style="margin-bottom: 30px;" class="vsc-initialized">
    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include(__path.views+'/admin/elements/sidebar.ejs'); %>        

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column"> 

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include(__path.views+'/admin/elements/topbar.ejs'); %>
                
                <!-- Content -->
                <%- body %>
            </div>            

            <!-- Footer -->
            <%- include(__path.views+'/admin/elements/footer.ejs'); %>
        </div>     
    </div>    

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top" style="display: none;">
        <i class="fas fa-angle-up"></i>
    </a>


    <!-- Hidden inputs-->
    <div id="hidden-input-container">
        <%- defineContent('hiddenInput') %>
    </div>
    <!-- Scripts -->
    <%- include(__path.views+'/admin/elements/scripts.ejs'); %>
</body>
</html>